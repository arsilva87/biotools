citHeader("To cite 'biotools' in publications use:")

citEntry(entry="Manual",
	title = "biotools: Tools for Biometry and Applied Statistics in Agricultural Science",
        author = c(person(c("Anderson", "Rodrigo"), "da Silva", role = c("aut", "cre"),
         email = "anderson.agro@hotmail.com")
        ),
  	year = "2021",  
        note = "R package version 4.1",
        url = "https://cran.r-project.org/package=biotools",
        key = "biotools-package",
        textVersion = paste("da Silva, A. R. ",
	       "(2021) ", 
               "biotools: Tools for Biometry and Applied Statistics in Agricultural Science. ",
               "R package version 4.1. ",
               "https://cran.r-project.org/package=biotools",
               sep="")
         )

citEntry(entry="Article",
	title = "biotools: an R function to predict spatial gene diversity via an individual-based approach",
      author = personList(as.person("A. R. da Silva"), 
	as.person("G. Malafaia"),
         as.person("I. P. P. de Menezes")),
	journal = "Genetics and Molecular Research",
  	year = "2017",
	volume = "16",
        doi = "10.4238/gmr16029655",    
        textVersion = 
        paste("da Silva, A.R.; Malafaia, G.; Menezes, I.P.P. ",
	       "(2017) ", 
               "biotools: an R function to predict spatial gene diversity via an individual-based approach. ",
               "Genetics and Molecular Research, ",
               "16. ", "doi: 10.4238/gmr16029655",
               sep="")
         )
